{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": "./src",

		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"]
		},
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"exclude": ["node_modules", "dist"]
}
